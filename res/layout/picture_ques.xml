<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <vn.hust.edu.view.SmartImageView
        android:id="@+id/pic_ques"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/thumb_i" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/num_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1. "
            android:textColor="@color/black"
            android:textSize="6pt"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_ans_picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <vn.hust.edu.buttonchooselib.CircleButton
                android:id="@+id/choose_a"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:layout_marginBottom="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="3dip"
                android:scaleType="centerInside"
                android:src="@drawable/a"
                app:cb_color="@color/black" />

            <vn.hust.edu.buttonchooselib.CircleButton
                android:id="@+id/choose_b"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:layout_marginBottom="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="3dip"
                android:scaleType="centerInside"
                android:src="@drawable/b"
                app:cb_color="@color/black" />

            <vn.hust.edu.buttonchooselib.CircleButton
                android:id="@+id/choose_c"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:layout_marginBottom="3dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="3dip"
                android:scaleType="centerInside"
                android:src="@drawable/c"
                app:cb_color="@color/black" />

            <vn.hust.edu.buttonchooselib.CircleButton
                android:id="@+id/choose_d"
                android:layout_width="38dip"
                android:layout_height="38dip"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="3dip"
                android:scaleType="centerInside"
                android:src="@drawable/d"
                app:cb_color="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>