<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="41. What are they speaker mainly discussing?"
            android:textColor="@color/black"
            android:textSize="6pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical" >

                <vn.hust.edu.buttonchooselib.CircleButton
                    android:id="@+id/choose_a"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/a"
                    app:cb_color="@color/black" />

                <TextView
                    android:id="@+id/ans_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary"
                    android:textColor="@color/black"
                    android:textSize="6pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical" >

                <vn.hust.edu.buttonchooselib.CircleButton
                    android:id="@+id/choose_b"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/b"
                    app:cb_color="@color/black" />

                <TextView
                    android:id="@+id/ans_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work hours"
                    android:textColor="@color/black"
                    android:textSize="6pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical" >

                <vn.hust.edu.buttonchooselib.CircleButton
                    android:id="@+id/choose_c"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/c"
                    app:cb_color="@color/black" />

                <TextView
                    android:id="@+id/ans_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benefits"
                    android:textColor="@color/black"
                    android:textSize="6pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <vn.hust.edu.buttonchooselib.CircleButton
                    android:id="@+id/choose_d"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/d"
                    app:cb_color="@color/black" />

                <TextView
                    android:id="@+id/ans_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacations"
                    android:textColor="@color/black"
                    android:textSize="6pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>